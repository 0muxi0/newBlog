<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
    
    <hibernate-mapping>
    			<class name="com.Lee.domain.Message" table="message">
    				<id name="mid" column="mid">
    						<generator class="native"/>
    				</id>
    				<property name="img" column="img"  length="255"></property>
    				<property name="content"  column="content"  type="text"></property>
    				<property name="name" column="name"  length="20"></property>
    				<property name="uptime"  column="uptime"  ></property>
    				<property name="tomid"  column="tomid"  length="100"></property>
    				<property name="toname"  column="toname"  length="255"></property>
    			</class>
    </hibernate-mapping>